        #custom bar colors
        colors {
                #~~~~~~~~~~~~~~~~~~
                background  $base04
                separator   $base00
                #~~~~~~~~~~~~~~~~  border  background text
                focused_workspace  $base01 $base00    $base03
                active_workspace   $base00 $base01    $base03
                inactive_workspace $base00 $base01    $base03
                urgent_workspace   $base05 $base01    $base03
        }
}

